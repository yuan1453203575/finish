/* pages/teacherDetail/teacherDetail.wxss */

.detail_wrap{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.top{
  width: 100%;
  height: 220rpx;
  position: relative;
  border-bottom:1px solid #bbb;
  border-top:1px solid #bbb;
  display: flex;
  align-items: center;
}
.img{
  width: 180rpx;
  height: 180rpx;
}
.img image{
  position: absolute;
  width: 180rpx;
  height: 180rpx;
}
.info{
  position: absolute;
  left: 240rpx;
  top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}

.name{
  font-size: large;
  font-weight: 900;
  margin-bottom: 20rpx;
}

.graduation,.education,.teaclass{
  font-size: small;
  color: #999;
  margin-bottom: 10rpx;
}

.content{
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 15rpx 0;
}
.title{
  font-size: large;
  margin: 20rpx 0;
}
.text{
  font-size: small;
  line-height: 20rpx;
  color: #aaa;
}