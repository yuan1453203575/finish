/* pages/publicList/publicList.wxss */
.public_list{
  width: 100%;
  height: 100%;
  background-color: #eee;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.item{
  width: 340rpx;
  height: 340rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx 0;

}
.item image{
    width: 280rpx;
    height: 180rpx;
}
.item .name{
  font-size: 28rpx;
  color: #333;
}
.item .count{
  color: #999;
  font-size: 28rpx;
}
.item .count .free{
  margin-left: 60rpx;
  color: #ff0000;
}